@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
</head>

<body>

<div class="login-light"></div>
<div class="login-box">
    <form asp-action="Login" method="post">
        <input type="checkbox" class="input-check" id="input-check">
        <label for="input-check" class="toggle">
            <span class="text off">off</span>
            <span class="text on">on</span>
        </label>
        <div class="light"></div>

        <h2>Logowanie</h2>
        <div class="input-box">
            <span class="icon">
                <ion-icon name="mail"></ion-icon>
            </span>
            <input type="email" name="email" id="email" >
            <label>Email</label>
            <div class="input-line"></div>
        </div>
        <div class="input-box">
            <span class="icon">
                <ion-icon name="lock-closed"></ion-icon>
            </span>
            <input type="password" name="password" id="password" >
            <label>Password</label>
            <div class="input-line"></div>
            @* <span asp-validation-for="Password" class="text-danger"></span> *@
            
        </div>

        <button type="submit">Login</button>
        <div class="notreg__inner">
            <span class="dnh-acc">Nie masz konta? <a class="reg-acc" asp-controller="Registration" asp-action="Registration">Rejestracja</a></span>
            
        </div>
    </form>
</div>


<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>