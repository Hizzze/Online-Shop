@model WebApplication2.Models.UserViewModel

<h1>Profil użytkownika</h1>

<!doctype html>
<html lang="en">
<head>
<meta charset="UTF-8">
             <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
                         <meta http-equiv="X-UA-Compatible" content="ie=edge">
             <title>Document</title>
</head>
<body>
<div class="user-profile">
    <p>Email: @Model.Email</p>
    <p>Imię: @Model.Name</p>
    <p>Nazwisko: @Model.LastName</p>
    <p>Telefon: @Model.Phone</p>
    <p>Adres: @Model.Address</p>
    <p>Kod pocztowy: @Model.PostalCode</p>
    <p>Paczkomat: @Model.APM</p>
</div>

<div class="purchase-history">
    <h1>Historia zakupów</h1>
    @if (Model.Orders.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>img</th>
                    <th>ilość</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Telefon</th>
                    <th>Kod pocztowy</th>
                    <th>Adres</th>
                    <th>Paczkomat</th>
                    <th>Całkowita cena</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        @foreach (var item in order.items)
                        {
                            <td><img class="profile__images" src="@item.pathImage"></img></td>
                            <td>@item.userCount</td>
                        }
                        <td>@order.name</td>
                        <td>@order.lastName</td>
                        <td>@order.phone</td>
                        <td>@order.postalCode</td>
                        <td>@order.address</td>
                        <td>@order.APM</td>
                        <td>@order.totalPrice</td>
                        <td>@order.status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="cart__empty-text">Twój profil jest pusty.</p>
    }
</div>
</body>
</html>