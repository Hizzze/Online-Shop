<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApplication2</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/> *@
     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true"/>
</head>
<body>
<header class="header">
        <div class="container">
            <div class="header__nav">
                <div class="header__nav-left">
                    <a class="header__nav-item" asp-controller="Home" asp-action="Index">Główna</a>
                    <a href="#footer" class="header__nav-item">Кontakt</a>
                </div>
                <a asp-controller="Home" asp-action="Index">
                    <img src="../images/logo.webp" class="header__logo">
                </a>

                <div class="header__nav-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a class="header__nav-item" asp-controller="Login" asp-action="Profile">
                                @User.Identity.Name
                            </a>
                                <span onclick="toggleDropdown(event)" class="arrow">&#9662;</span>
                            <div id="dropdownContent" class="dropdown-content">
                                <a class="header__nav-item header__logout" asp-controller="Login" asp-action="Logout">Logout</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="auth__inner">
                            <a class="header__nav-item" asp-controller="Registration" asp-action="Registration">Rejestracja</a>
                            <a class="header__nav-item" asp-controller="Login" asp-action="Login">Login</a>
                        </div>
                    }
                </div>
                
                <ul class="user-nav">
                    <li class="user-nav__item user-nav__cart">
                        <a class="user-nav-link user-nav-link__cart" asp-controller="Cart" asp-action="Cart">
