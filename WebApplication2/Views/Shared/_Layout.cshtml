<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApplication2</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/> *@
     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true"/>
</head>
<body>
<header class="header">
        <div class="container">
            <div class="header__nav">
                <div class="header__nav-left">
                    <a class="header__nav-item" asp-controller="Home" asp-action="Index">Główna</a>
                    <a class="header__nav-item">Кontakt</a>
                </div>
                    <img src="images/logo.webp" class="header__logo">

                <div class="header__nav-right">
                    <a class="header__nav-item" asp-controller="Registration" asp-action="Registration">Rejestracja</a>
                </div>
                
                <ul class="user-nav">
                    <li class="user-nav__item">
                        <a href="#" class="user-nav-link">
                            <img src="images/favorites.svg" alt="" />
                        </a>
                        </li>
                    <li class="user-nav__item">
                        
                        <a href="#" class="user-nav-link">
                            
                            <img src="images/cart.svg" alt="" />
                        
                            </a>
                    
                        </li>
                </ul>
            </div>
        </div>
    </header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - WebApplication2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>